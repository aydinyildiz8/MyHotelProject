@model ReceiveMessageByIdDto
@{
    ViewData["Title"] = "ReceiveMessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/ContactAdmin/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

    @await Html.PartialAsync("SideBarAdminContactPartial")
    @await Html.PartialAsync("SideBarAdminContactCategoryPartial")

</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button class="btn btn-dark" type="button">
                Gelen Mesaj Detayı
            </button>
        </div>
    </div>
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="~/adminweb/images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.ContactName</h5>
                <p class="m-b-2">@Model.ContactDate.ToShortDateString()</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <span class="float-right">@Model.ContactDate.ToShortTimeString()</span>
                <h4 class="m-0 text-primary">@Model.ContactSubject</h4><small class="text-muted">Kimden: @Model.ContactMail</small>
            </div>
        </div>
        <p>@Model.ContactMessage</p>
        <hr>
        <br />
        <h4 class="mb-2 text-primary">Yanıtla</h4>
        <div class="form-group p-t-15">
            <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="It's really an amazing.I want to know more about it..!"></textarea>
        </div>
    </div>
    <div class="text-right">
        <button class="btn btn-primary m-b-30" type="button">Gönder</button>
    </div>
</div>



