@model AdminMailViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<h4 class="card-title">Mail Gönderme İşlemi</h4>
<div class="basic-form">
    <form method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Alıcının Mail Adresi</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" asp-for="ReceiverMail">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Konu</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Subject">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <textarea type="email" class="form-control" rows="4" asp-for="Body"></textarea>
            </div>
        </div>
        <button class="btn btn-primary">Mail Gönder</button>
    </form>
</div>

