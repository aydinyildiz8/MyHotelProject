@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Günecelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.TestimonialName</td>
            <td>@item.TestimonialTitle</td>
            <td>@item.TestimonialImage</td>
            <td><a class="btn btn-danger" href="/Testimonial/DeleteStaff/@item.TestimonialID">Sil</a></td>
            <td><a class="btn btn-success" href="/Testimonial/UpdateStaff/@item.TestimonialID">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Testimonial/AddTestimonial/" class="btn btn-info">Yeni Referans Girişi</a>


