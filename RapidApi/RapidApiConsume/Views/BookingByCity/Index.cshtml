@model List<BookingApiViewModel.Result>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />

    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>ID Bilgisini Giriniz</label>
        <input type="text" class="form-control" name="cityId" />
        <br />
        <button class="btn btn-danger">Şehir İçin Otelleri Listele</button>
    }

    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Otel Adı</th>
            <th>Puanı</th>
            <th>Detayı</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count .</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-dark">Detay</a></td>
            </tr>
        }
    </table>
</div>